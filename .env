# БД
DATABASE_URL=sqlite+aiosqlite:///./data/currency_monitor.db

# NATS
NATS_URL=nats://localhost:4222

# API настройки
BACKGROUND_TASK_INTERVAL=60
API_TIMEOUT=10

# External API
EXCHANGERATE_API_URL=https://api.exchangerate-api.com/v4/latest
BASE_CURRENCY=USD

# Логирование
LOG_LEVEL=INFO

# Режим обновления: "default" (стоковые) или "all" (все из БД)
UPDATE_MODE=all

# Стоковые фиатные валюты (к USD)
DEFAULT_FIAT_CURRENCIES=["EUR","JPY","CNY","KZT","GBP","CHF","CAD"]

# Стоковые криптовалюты (к USDT)
DEFAULT_CRYPTO_CURRENCIES=["BTC","ETH","SOL","XRP","DOGE","TON","ADA","DOT"]

# Стоковые валюты ЦБ РФ (к RUB)
DEFAULT_CBR_CURRENCIES=["USD","EUR","CNY","BYN","KZT","JPY","GBP"]
